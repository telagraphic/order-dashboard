<section class="barba-container" data-barba="container" data-barba-namespace="pending" data-service-name="Pending Orders" data-service-update="{{jobLastRun}}">
  <table id="orders" class="orders pending-orders">
    <thead class="orders__header">
      <tr class="orders__header-row">
        <th class="orders__header-col">
          <h3>Status</h3>
        </th>
        <th class="orders__header-col">
          <h3>Client</h3>
        </th>
        <th class="orders__header-col">
          <h3>User</h3>
        </th>
        <th class="orders__header-col">
          <h3>Approved?</h3>
        </th>
        <th class="orders__header-col">
          <h3>Paid?</h3>
        </th>
        <th class="orders__header-col" data-sort-method="date">
          <h3>Order on Date</h3>
        </th>
      </tr>
    </thead>
    <tbody class="orders__body">
      {{#each pendingOrders}}
      <tr class="orders__body-row {{checkClass this.status}}">
        <td class="orders__body-cell">{{{this.status}}}</td>
        <td class="orders__body-cell">{{this.client}}</td>
        <td class="orders__body-cell">{{this.user}}</td>
        <td class="orders__body-cell">{{this.approved}}</td>
        <td class="orders__body-cell">{{this.paid}}</td>
        <td class="orders__body-cell">{{formatDate this.orderDate}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>
