<header class="header">
  <section class="header__service-and-status">
    <h1 class="header__service-name">Pageflex</h1>
    <span class="header__update-time">updated 15 mins ago</span>
  </section>
  <ul class="header__status">
    <li class="header__status-key">
      <svg class="header__status-key-icon" id="" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" width="0.25in" height="0.25in" viewBox="0 0 12 12">
        <title>status-circle</title>
        <circle cx="6" cy="6" r="6" style="fill: #e06c75"/>
      </svg>
      <span class="header__status-key-description">Failed</span>
    </li>
    <li class="header__status-key">
      <svg class="header__status-key-icon" id="#" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" width="0.25in" height="0.25in" viewBox="0 0 12 12">
        <title>status-circle</title>
        <circle cx="6" cy="6" r="6" style="fill: #FFFA72"/>
      </svg>
      <span class="header__status-key-description" style="color: #FFFA72;">Not Approved</span>
    </li>
    <li class="header__status-key">
      <svg class="header__status-key-icon" id="" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" width="0.25in" height="0.25in" viewBox="0 0 12 12">
        <title>status-circle</title>
        <circle cx="6" cy="6" r="6" style="fill: #98c379"/>
      </svg>
      <span class="header__status-key-description">New Order</span>
    </li>
  </ul>
  <nav class="header__navigation-button">
    <a href="/">Vision</a>
    <a href="/skyportal">Sky Portal</a>
    <a href="/pageflex">Pageflex</a>
  </nav>
</header>
<main>
  <table id="orders" class="orders">
    <thead class="orders__header">
      <tr class="orders__header-row">
        <th class="orders__header-col">
          <h3>Client</h3>
        </th>
        <th class="orders__header-col" data-sort-method='number'>
          <h3>ID</h3>
        </th>
        <th class="orders__header-col">
          <h3>Order Status</h3>
        </th>
        <th class="orders__header-col">
          <h3>Item Status</h3>
        </th>
        <th class="orders__header-col">
          <h3>User</h3>
        </th>
        <th class="orders__header-col">
          <h3>Time</h3>
        </th>
        <th class="orders__header-col" data-sort-method="date">
          <h3>Date</h3>
        </th>
      </tr>
    </thead>
    <tbody class="orders__body">
      {{#each pageflexOrders}}
      <tr class="orders__body-row">
        <td class="orders__body-cell">{{this.client}}</td>
        <td class="orders__body-cell">{{this.id}}</td>
        <td class="orders__body-cell">{{this.orderStatus}}</td>
        <td class="orders__body-cell">{{this.itemStatus}}</td>
        <td class="orders__body-cell">{{this.user}}</td>
        <td class="orders__body-cell">{{this.time}}</td>
        <td class="orders__body-cell">12/12/1212</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</main>
